<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragDetalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.joseflores.ciudades.fragmentos.DetallePersonaje"
        tools:layout="@layout/fragment_detalle_personaje"
        android:layout_weight="1">

    </fragment>

    <fragment
        android:id="@+id/fragLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.joseflores.ciudades.fragmentos.ListaPersonajes"
        tools:layout="@layout/fragment_lista_personajes"
        android:layout_weight="1">

    </fragment>

</LinearLayout>